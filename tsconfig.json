{
    "compileOnSave": true,
    "compilerOptions": {
				"allowSyntheticDefaultImports": true,
				"lib": ["es5", "es6", "dom"],
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
				"jsx": "react",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/**/**/*"
    ]
}
